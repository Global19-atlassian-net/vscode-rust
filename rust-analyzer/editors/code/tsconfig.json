{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "es2015",
        "target": "es2018",
        "outDir": "out",
        "lib": [
            "es2019"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "newLine": "LF",
        "esModuleInterop": true,
        "importHelpers": true
    },
    "exclude": [
        "node_modules"
    ]
}
